
*
  margin 0
  padding 0
  box-sizing border-box

html
  height 100%
body
  height 100%
  display flex
  min-height 100%
  flex-direction column
#full-screen,
#page
  height 100%

img
  max-width 100%
  max-height 100%

li
  display block

.h100
  height 100%
.w100
  width 100%
.block
  display block
.hidden
  display none

.align
.align-v
  display flex
  align-items center
.align
  justify-content center
.align-v
  flex-wrap wrap
.align-h
  align-items stretch
.align-h.row > div
  display flex

.align-reset-l
  display flex
  flex 0 0 100%
.align-reset-h
  align-self flex-start

.plr
  padding 0 18px 0 18px
.mt
  margin-top 18px
.mr
  margin-right 18px
.ml
  margin-left 18px
.mb
  margin-bottom 18px

.hCenter
  display flex
  justify-content center
.hCenterImg
  display block
  margin auto

.hMAXv
  display flex
  flex auto
  flex-direction column
  > div
    display flex
    flex-direction column
    flex 1
    justify-content center
  
.hMAXh
  display flex
  flex auto
  flex-direction row
  > div
    display flex
    flex-direction column
    flex 1
    justify-content center
 
.hexpand
  display flex
  flex auto
  flex-direction column
  //flex-wrap nowrap
  

.hparent
  display flex
  flex-direction column
  //flex-wrap nowrap
.hchild
  flex auto
.hchildfixed
  flex none

.border
  border 1px solid

.editable-div
  display none
.editable-textdiv
  margin-top 3px
  word-wrap break-word
textarea
  width 450px
  height 150px
.editable-textarea
  margin 0
  margin-right 4px
  padding 0
  resize none
  overflow hidden
  vertical-align text-bottom
.editable-button
  margin 0
  margin-left 4px
  padding 3px 5px
